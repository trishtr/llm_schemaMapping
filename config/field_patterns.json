{
  "npi_identifier": {
    "regex": "^[0-9]{10}$",
    "field_names": ["npi", "national_provider_id"],
    "data_types": ["varchar", "char"]
  },

  "email_address": {
    "regex": "^[a-zA-Z0-9][a-zA-Z0-9._%+-]{0,63}@[a-zA-Z0-9][a-zA-Z0-9.-]{0,62}\\.[a-zA-Z]{2,6}$",
    "field_names": ["email", "email_address", "email_addr"],
    "patterns": ["*email*", "*_email", "email_*", "*mail*"],
    "data_types": ["varchar", "text"]
  },

  "phone_number": {
    "regex": "^(\\+?1[-\\s]?)?\\(?[2-9][0-9]{2}\\)?[-\\s]?[0-9]{3}[-\\s]?[0-9]{4}$",
    "field_names": ["phone", "phone_number", "telephone"],
    "data_types": ["varchar"]
  },

  "ssn": {
    "regex": "^[0-9]{3}-[0-9]{2}-[0-9]{4}$",
    "field_names": ["ssn", "social_security_number"],
    "data_types": ["varchar", "char"]
  },

  "zip_code": {
    "regex": "^[0-9]{5}(-[0-9]{4})?$",
    "field_names": ["zip", "zip_code", "postal_code", "zipcode"],
    "data_types": ["varchar", "char"]
  },

  "credit_card": {
    "regex": "^[0-9]{4}[-\\s]?[0-9]{4}[-\\s]?[0-9]{4}[-\\s]?[0-9]{4}$",
    "field_names": ["credit_card", "card_number", "cc_number"],
    "data_types": ["varchar"]
  },

  "currency_amount": {
    "regex": "^\\$[0-9]{1,8}\\.[0-9]{2}$",
    "field_names": ["amount", "price", "cost", "total", "payment", "balance"],
    "data_types": ["decimal", "money", "numeric"]
  },

  "status_field": {
    "field_names": ["status", "state"],
    "valid_values": [
      "active",
      "inactive",
      "pending",
      "completed",
      "cancelled",
      "approved",
      "rejected"
    ],
    "data_types": ["varchar"]
  },

  "patient_id": {
    "field_names": ["patient_id", "mrn", "medical_record_number"],
    "data_types": ["int", "bigint", "varchar"]
  },

  "timestamp_field": {
    "field_names": ["created_at", "updated_at", "modified_at", "deleted_at"],
    "data_types": ["timestamp", "datetime"]
  }
}
